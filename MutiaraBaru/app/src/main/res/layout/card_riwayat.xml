<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/AliceBlue"
	android:padding="5dp">

	<android.support.v7.widget.CardView
		xmlns:cardview="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="3dp"
		cardview:cardCornerRadius="4dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="5dp">

			<TextView
				android:id="@+id/no_pesanan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:layout_toRightOf="@+id/gambar_barang"
				android:text="No. Pesanan :"
				android:textColor="#000000"
				android:textSize="20sp" />

			<TextView
				android:id="@+id/nm_agen"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/no_pesanan"
				android:layout_marginLeft="10dp"
				android:text="Nama Agen :"
				android:textColor="#000000"
				android:textSize="20sp" />
			<TextView
				android:id="@+id/title_alamat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/nm_agen"
				android:text="Alamat :"
				android:textColor="#F0000000"
				android:layout_marginLeft="10dp"
				android:textSize="20sp"/>

			<TextView
				android:id="@+id/status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/title_alamat"
				android:text="Status :"
				android:textColor="@android:color/black"
				android:textSize="20sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:id="@+id/tgl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/status"
				android:text="Tanggal :"
				android:textColor="@android:color/black"
				android:textSize="20sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:id="@+id/total_hrg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/tgl"
				android:text="Total Harga :"
				android:textColor="@android:color/black"
				android:textSize="20sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:id="@+id/jenis_byr"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/total_hrg"
				android:text="Jenis Pembayaran :"
				android:textColor="@android:color/black"
				android:textSize="20sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:id="@+id/status_brng"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/jenis_byr"
				android:text="Status Pembayaran :"
				android:textColor="@android:color/black"
				android:textSize="20sp"
				android:layout_marginLeft="10dp"/>

			<Button
				android:id="@+id/btn_lihat_brng"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/status_brng"
				android:layout_margin="10dp"
				android:text="Lihat Barang"
				android:textSize="16dp"
				android:background="@color/SteelBlue"/>
				<!--android:onClick="Show Order"-->

			<!--EditText
				android:id="@+id/qty"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_below="@+id/harga"
				android:layout_marginTop="10dp"
				android:textAlignment="center"
				android:text="0"
				android:inputType="number"
				android:textSize="20sp"
				android:layout_toRightOf="@+id/title_qty"/>-->


		</RelativeLayout>

	</android.support.v7.widget.CardView>
</RelativeLayout>
